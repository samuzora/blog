.friends-link-container(class="flex flex-col")
  h1(class="text-[3.2rem] mt-1.5 mb-5 font-bold leading-[1]") #{page.title}
    each category in theme.links
      div(class="mt-2 mb-4")
        h2(class="text-2xl font-bold") #{category.links_category}
        if category.has_thumbnail
          ul(class="grid grid-cols-2 mb-6 w-full gap-4")
            each friend in category.list
              li(class="group transform scale-100 transition-transform duration-100 ease-linear active:scale-95")
              a(href=friend.link)
                .content.redefine-box-shadow-flat(class="rounded-lg")
                  .thumbnail(class="rounded-t-lg h-32 md:h-44 overflow-hidden")
                    img(
                      class="rounded-t-lg object-cover w-full h-full"
                      src=friend.thumbnail
                    )
                  .avainfo(class="flex flex-row items-center gap-1 sm:gap-2 overflow-hidden min-w-0")
                    .avatar(class="h-16 w-16 rounded-bl-lg bg-third-background-color")
                      if friend.avatar
                        img(
                          class="rounded-bl-lg h-16 w-16 max-w-none"
                          src=friend.avatar
                          onerror="this.style.display = 'none'"
                        )
                      else
                        i(class="fa-solid fa-user-group")

                    div(class="flex flex-col min-w-0")
                      div(class="text-lg text-second-text-color ellipsis group-hover:!text-primary") #{friend.name}
                      div(class="text-third-text-color ellipsis") #{friend.description}
        else
          ul(class="grid mb-6 gap-4" + theme.page_templates.friends_columns === 3 ? "grid-cols-2 sm:grid-cols-3" : "grid-cols-2")
            each friend in category.list
              li(
                class="group transform scale-100 transition-transform duration-100 ease-linear active:scale-95"
              )
                a(href=friend.link)
                  .redefine-box-shadow-flat(class="flex flex-row items-center gap-1 sm:gap-2 overflow-hidden min-w-0 rounded-lg")
                    div(class="h-16 w-16 rounded-bl-lg bg-third-background-color")
                      if friend.avatar
                        img(
                          class="rounded-l-lg h-16 w-16 max-w-none"
                          src=friend.avatar
                          onerror="this.style.dispay='none'"
                        )
                      else
                        i(class="fa-solid fa-user-group")
                  div(class="flex flex-col min-w-0")
                    div(class="text-lg text-second-text-color ellipsis group-hover:!text-primary") #{friend.name}
                    div(class="text-third-text-color ellipsis") #{friend.description}
  
  .clear
